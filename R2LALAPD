    <script>
        document.getElementById('swatForm').addEventListener('submit', function (e) {
            e.preventDefault();
            const formData = new FormData(this);

            const webhookURL = "https://discord.com/api/webhooks/1284860730767577139/IZz5g3bhP7qpaKYqavDEikitwKJjeTa0bGVbaJY4tEOHC4VGaedQD3NhkuozbxnUb5p7";

            const data = {
                content: `**SWAT Application Submitted**\nRoblox Username: ${formData.get('robloxUsername')}\nDiscord Username: ${formData.get('discordUsername')}\nReason: ${formData.get('reason')}\nAbove 13: ${formData.get('age')}`
            };

            fetch(webhookURL, {
                method: "POST",
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify(data)
            }).then(() => {
                alert("Application submitted successfully!");
                this.reset();
            }).catch((err) => {
                alert("There was an error submitting the application.");
                console.error(err);
            });
        });
    </script>
